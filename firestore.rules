rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return signedIn() && request.auth.uid == userId;
    }

    // Profils utilisateurs
    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if signedIn() && request.auth.uid == userId;
    }

    // Annonces accessibles publiquement
    match /ads/{adId} {
      allow read: if true;
      allow create: if signedIn() && request.resource.data.sellerId == request.auth.uid;
      allow update, delete: if signedIn() && request.auth.uid == resource.data.sellerId;
    }

    // Favoris et alertes priv√©s
    match /users/{userId}/favorites/{favId} {
      allow read, write: if isOwner(userId);
    }
    match /users/{userId}/alerts/{alertId} {
      allow read, write: if isOwner(userId);
    }

    // Chats et messages accessibles uniquement aux participants
    match /chats/{chatId} {
      allow read, write: if signedIn() && request.auth.uid in resource.data.participants;
    }
    match /chats/{chatId}/messages/{messageId} {
      allow read, create: if signedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
    }

    // Avis
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if signedIn();
    }

    match /categories/{categoryId} {
      allow read: if true;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
